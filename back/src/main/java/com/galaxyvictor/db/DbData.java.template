    private static boolean DEVELOP_CONNECTION = Config.DEVELOP;

    public static DatabaseConnectionData getConnectionData(){
        if(DEVELOP_CONNECTION){
            return new DatabaseConnectionData(){

                @Override
                public String getUrl() {
                    return "jdbc:postgresql://localhost:5432/";
                }
    
                @Override
                public String getUsername() {
                    return "postgres";
                }
    
                @Override
                public String getPassword() {
                    return "";
                }
    
                @Override
                public String getDatabaseName() {
                    return "gv_develop";
