                }
    
                @Override
                public String getUsername() {
                    return "postgres";
                }
    
                @Override
                public String getPassword() {
                    return "";
                }
    
                @Override
                public String getDatabaseName() {
                    return "gv";
                }
    
            };
        }
        
    }

    public static void setDevelopMode() {
        DEVELOP_CONNECTION = true;
    }
}